<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Contact_Helper.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:sfG="clr-namespace:Syncfusion.Maui.DataGrid;assembly=Syncfusion.Maui.DataGrid"
    xmlns:sftr="clr-namespace:Syncfusion.Maui.TreeView;assembly=Syncfusion.Maui.TreeView"
    xmlns:syncfusion="clr-namespace:Syncfusion.Maui.Buttons;assembly=Syncfusion.Maui.Buttons"
    BackgroundColor="LightBlue">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25"
            VerticalOptions="Center">

            <Label
                FontSize="18"
                HorizontalOptions="Center"
                SemanticProperties.Description="Welcome to dot net Multi platform App U I"
                SemanticProperties.HeadingLevel="Level2"
                Text="Welcome to Contact Cleaner"
                TextColor="Red" />
            <VerticalStackLayout Padding="10">
                <Label
                    FontSize="18"
                    HorizontalOptions="Start"
                    SemanticProperties.HeadingLevel="Level2"
                    Text="FileName"
                    TextColor="Red" />
                <Entry
                    x:Name="fileEntry"
                    HorizontalOptions="Start"
                    Keyboard="Telephone"
                    Placeholder="FileName"
                    TextColor="Red" />
                <Button
                    x:Name="FileSelect"
                    Clicked="FileSelect_Clicked"
                    HorizontalOptions="Start"
                    Text="Select File"
                    class="PrimaryButton" />
                <Button
                    x:Name="ExcelButton"
                    Clicked="ExcelButton_Clicked"
                    HorizontalOptions="Start"
                    Text="Load"
                    class="PrimaryButton" />
                <Button
                    x:Name="SearchExcel"
                    Clicked="SearchExcel_Clicked"
                    HorizontalOptions="Start"
                    Text="Search From Excel"
                    class="PrimaryButton" />
            </VerticalStackLayout>

            <HorizontalStackLayout Padding="10">

                <Label
                    FontSize="18"
                    HorizontalOptions="Start"
                    SemanticProperties.HeadingLevel="Level2"
                    Text="Search By Number"
                    TextColor="Red" />
                <Entry
                    x:Name="PhoneNumberEntry"
                    HorizontalOptions="Start"
                    Keyboard="Telephone"
                    Placeholder="Phone Number with Country Code" />
            </HorizontalStackLayout>
            <StackLayout Padding="20">
                <Label
                    x:Name="label"
                    Margin="0,10"
                    FontAttributes="Bold"
                    Text="Option"
                    TextColor="Purple" />
                <syncfusion:SfCheckBox
                    x:Name="ByName"
                    CheckedColor="Red"
                    CornerRadius="5.0"
                    FontAttributes="Bold"
                    HorizontalTextAlignment="Start"
                    Text="Name"
                    TextColor="Blue"
                    UncheckedColor="Violet" />
                <syncfusion:SfCheckBox
                    x:Name="ByEmail"
                    CheckedColor="Purple"
                    CornerRadius="5.0"
                    FontAttributes="Bold"
                    HorizontalTextAlignment="Start"
                    Text="Email"
                    TextColor="Blue"
                    UncheckedColor="Violet" />
                <syncfusion:SfCheckBox
                    x:Name="ByRaw"
                    CheckedColor="Green"
                    CornerRadius="5.0"
                    FontAttributes="Bold"
                    HorizontalTextAlignment="Start"
                    IsChecked="True"
                    Text="Raw Data"
                    TextColor="Blue"
                    UncheckedColor="Violet" />
            </StackLayout>

            <Button
                x:Name="searchButton"
                Clicked="searchButton_Clicked"
                HorizontalOptions="Center"
                Text="Search"
                class="PrimaryButton" />

            <Label
                x:Name="treeView"
                BackgroundColor="Beige"
                Text=""
                TextColor="Red" />


            <VerticalStackLayout
                Padding="10"
                HorizontalOptions="StartAndExpand"
                MinimumHeightRequest="320"
                MinimumWidthRequest="320"
                VerticalOptions="StartAndExpand">
                <ScrollView>
                    <sfG:SfDataGrid
                        x:Name="dataGrid"
                        BackgroundColor="Beige"
                        GridLinesVisibility="Both"
                        HeaderGridLinesVisibility="Both"
                        ItemsSource="{x:Binding Source=Contacts}"
                        MinimumHeightRequest="300"
                        MinimumWidthRequest="300"
                        VerticalOptions="StartAndExpand"
                        VerticalScrollBarVisibility="Always" />
                </ScrollView>
            </VerticalStackLayout>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>